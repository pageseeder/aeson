<project name="test" default="tojson" >

<!--
  Converts all files in /source folder to json and store them in /got folder.
-->
<target name="tojson">
  <java classname="org.weborganic.aeson.Main" classpath="../classes;../lib/json-1.0.3.jar;../lib/json-api-1.0.jar;">
  	<arg value="-s:source"/>
  	<arg value="-xsl:json.xsl"/>
  	<arg value="-o:got"/>
  </java>
</target>

</project>
